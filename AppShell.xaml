<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CargaGestor.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CargaGestor"
    Title="CargaGestor">

    <!-- Página de Login -->
    <FlyoutItem Title="Login" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent
            x:Name="menuLogin"
            Title="Login"
            ContentTemplate="{DataTemplate local:TelaLoginPage}"
            Route="Login" />
    </FlyoutItem>

    <!-- Página Inicial -->
    <FlyoutItem Title="Home" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent
            x:Name="menuHome"
            Title="Home"
            ContentTemplate="{DataTemplate local:HomePage}"
            Route="Home" />
    </FlyoutItem>

    <!-- Cadastro de Cargas -->
    <FlyoutItem Title="Cadastrar Carga" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent
            x:Name="menuCadastro"
            Title="Cadastrar Carga"
            ContentTemplate="{DataTemplate local:CadastroCargaPage}"
            Route="CadastroCarga" />
    </FlyoutItem>

    <!-- Listar Cargas -->
    <FlyoutItem Title="Listar Cargas" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent
            x:Name="menuListarCargas"
            Title="Listar Cargas"
            ContentTemplate="{DataTemplate local:ListarCargasPage}"
            Route="ListarCargas" />
    </FlyoutItem>

    <!-- Relatórios -->
    <FlyoutItem Title="Relatórios" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent
            x:Name="menuRelatorios"
            Title="Relatórios"
            ContentTemplate="{DataTemplate local:RelatorioGanhosPage}"
            Route="Relatorios" />
    </FlyoutItem>

    <!-- Configurações -->
    <FlyoutItem Title="Configurações" FlyoutDisplayOptions="AsSingleItem">
        <ShellContent
            x:Name="menuConfiguracoes"
            Title="Configurações"
            ContentTemplate="{DataTemplate local:ConfigPage}"
            Route="Configuracoes" />
    </FlyoutItem>

</Shell>
