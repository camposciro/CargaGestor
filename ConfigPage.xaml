<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CargaGestor.ConfigPage"
    Title="Configurações">

    <StackLayout Padding="20" Spacing="20">

        <Label Text="Configurações" FontAttributes="Bold" FontSize="24" HorizontalOptions="Center" />

        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Spacing="15">
            <Label Text="Modo Escuro" VerticalOptions="Center" FontSize="18" />
            <Switch x:Name="switchModoEscuro" Toggled="OnSwitchModoEscuroToggled" HorizontalOptions="EndAndExpand" />
        </StackLayout>

        <StackLayout Orientation="Horizontal" VerticalOptions="Center" Spacing="15">
            <Label Text="Notificações" VerticalOptions="Center" FontSize="18" />
            <Switch x:Name="switchNotificacoes" Toggled="OnSwitchNotificacoesToggled" HorizontalOptions="EndAndExpand" />
        </StackLayout>

    </StackLayout>

</ContentPage>
