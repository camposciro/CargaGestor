<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CargaGestor.ConfigPage"
             Title="Configurações">

    <Grid Padding="10" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*">
        <!-- Modo escuro -->
        <Label Text="Modo Escuro" Grid.Row="0" VerticalOptions="Center" />
        <Switch x:Name="switchModoEscuro" Grid.Row="0" HorizontalOptions="End" Toggled="OnSwitchModoEscuroToggled" />

        <!-- Notificações -->
        <Label Text="Notificações" Grid.Row="1" VerticalOptions="Center" />
        <Switch x:Name="switchNotificacoes" Grid.Row="1" HorizontalOptions="End" Toggled="OnSwitchNotificacoesToggled" />

        <!-- Removida opção idioma conforme pedido -->

    </Grid>

</ContentPage>
