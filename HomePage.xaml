<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CargaGestor.HomePage"
    Title="CargaGestor - Menu Principal"
    BackgroundColor="{AppThemeBinding Light=#f0f4f8, Dark=#121212}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

            <Label
                Text="📦 CargaGestor"
                FontSize="36"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="{AppThemeBinding Light=#333333, Dark=#eeeeee}" />

            <Label
                Text="Gerencie suas cargas com eficiência"
                FontSize="18"
                HorizontalOptions="Center"
                TextColor="{AppThemeBinding Light=#666666, Dark=#cccccc}" />

            <!-- Botões principais -->
            <Button
                Text="🆕 Cadastrar Nova Carga"
                FontSize="20"
                BackgroundColor="{AppThemeBinding Light=#01A58D, Dark=#028090}"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="60"
                Clicked="OnCadastrarCargaClicked" />

            <Button
                Text="📋 Listar Cargas"
                FontSize="20"
                BackgroundColor="{AppThemeBinding Light=#028090, Dark=#01A58D}"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="60"
                Clicked="OnListarCargasClicked" />

            <Button
                Text="📈 Relatórios de Ganhos"
                FontSize="20"
                BackgroundColor="{AppThemeBinding Light=#05668D, Dark=#054759}"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="60"
                Clicked="OnRelatoriosClicked" />

            <Button
                Text="⚙️ Configurações"
                FontSize="20"
                BackgroundColor="{AppThemeBinding Light=#01A58D, Dark=#028090}"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="60"
                Clicked="OnConfiguracoesClicked" />

            <Button
                Text="🚪 Sair"
                FontSize="20"
                BackgroundColor="{AppThemeBinding Light=#D72631, Dark=#b22222}"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="60"
                Clicked="OnSairClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
