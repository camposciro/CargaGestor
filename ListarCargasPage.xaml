<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CargaGestor.ListarCargasPage"
    Title="Listar Cargas">

    <ContentPage.Content>
        <VerticalStackLayout Padding="10" Spacing="10">

            <Label 
                Text="Cargas Cadastradas" 
                FontAttributes="Bold" 
                FontSize="24"
                TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />

            <CollectionView
                ItemsSource="{Binding Cargas}"
                SelectionMode="None"
                Margin="0"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}"
                >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="0,5"
                            Padding="10"
                            CornerRadius="5"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                            BorderColor="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                            HasShadow="False">

                            <VerticalStackLayout>

                                <Label 
                                    Text="{Binding NumeroCTE}" 
                                    FontAttributes="Bold" 
                                    FontSize="18"
                                    TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"/>

                                <Label 
                                    Text="{Binding DataCarregamento}" 
                                    FontSize="14"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}"/>

                                <Label 
                                    Text="{Binding PesoKg, StringFormat='Peso: {0} kg'}"
                                    FontSize="14"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray400}}" />

                                <Label
                                    Text="{Binding Status}"
                                    FontAttributes="Italic"
                                    FontSize="14"
                                    TextColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Magenta}}" />

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label 
                Text="Nenhuma carga cadastrada."
                IsVisible="{Binding Cargas.Count, Converter={StaticResource IntToBoolConverter}, ConverterParameter=inverse}"
                HorizontalOptions="Center"
                TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
